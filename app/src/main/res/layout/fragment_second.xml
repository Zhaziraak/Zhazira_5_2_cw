<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment">

    <LinearLayout
        android:id="@+id/ll_sfragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp">

        <ImageView
            android:src="@drawable/img_second"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

        <TextView
            android:id="@+id/tv_fname"
            android:hint="You"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_home"
            android:layout_gravity="center_horizontal"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            android:id="@+id/tv_sname"
            android:hint="Me"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:paddingBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_txt_score"
            android:hint="Your Score"
            android:textColor="@color/text_red"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_border"
        app:layout_constraintTop_toBottomOf="@id/ll_sfragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_border"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/tv_result"
        app:layout_constraintStart_toStartOf="@id/img_border"
        app:layout_constraintEnd_toEndOf="@id/img_border"
        app:layout_constraintTop_toTopOf="@id/img_border"
        app:layout_constraintBottom_toBottomOf="@id/img_border"
        android:hint="100%"
        android:textColor="@color/text_red"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_try_again"
        app:layout_constraintTop_toBottomOf="@id/img_border"
        app:layout_constraintStart_toStartOf="@id/img_border"
        app:layout_constraintEnd_toEndOf="@id/img_border"
        android:text="Try Again"
        android:layout_marginTop="10dp"
        android:textSize="28dp"
        android:backgroundTint="@color/text_red"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>